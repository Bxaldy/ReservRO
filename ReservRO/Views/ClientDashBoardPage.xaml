                                       WidthRequest="42"
                                       Padding="0"
                                       HasShadow="True"
                                       Visual="Material"
                                       CornerRadius="25"
                                       BorderColor="Black">
                                    <Label Text="TU" HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Frame>
                                <Frame 
                                    HeightRequest="42"
                                       WidthRequest="42"
                                       Padding="0"
                                       HasShadow="True"
                                       Visual="Material"
                                       CornerRadius="25"
                                       BorderColor="Black">
                                    <Label Text="TU" HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Frame>
